<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/setting"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:background="@mipmap/setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/SHIT"
        android:layout_width="362dp"
        android:layout_height="175dp"
        android:src="@mipmap/shit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting" />

    <Button
        android:id="@+id/PLAY_BUTTON"
        android:layout_width="218dp"
        android:layout_height="112dp"
        android:background="@mipmap/blek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SHIT" />

    <Button
        android:id="@+id/stop"
        android:layout_width="61dp"
        android:layout_height="60dp"
        android:background="@mipmap/stop"
        app:layout_constraintEnd_toStartOf="@+id/forward"
        app:layout_constraintStart_toEndOf="@+id/previous"
        app:layout_constraintTop_toBottomOf="@+id/PLAY_BUTTON" />

    <Button
        android:id="@+id/forward"
        android:layout_width="61dp"
        android:layout_height="60dp"
        android:layout_marginEnd="71dp"
        android:background="@mipmap/forward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stop"
        app:layout_constraintTop_toBottomOf="@+id/PLAY_BUTTON" />

    <Button
        android:id="@+id/previous"
        android:layout_width="61dp"
        android:layout_height="60dp"
        android:layout_marginStart="71dp"
        android:background="@mipmap/previous"
        app:layout_constraintEnd_toStartOf="@+id/stop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PLAY_BUTTON" />

    <Button
        android:id="@+id/profile"
        android:layout_width="62dp"
        android:layout_height="61dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="23dp"
        android:background="@mipmap/book"
        app:layout_constraintBottom_toTopOf="@+id/fb"
        app:layout_constraintEnd_toStartOf="@+id/reload"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/previous" />

    <Button
        android:id="@+id/news"
        android:layout_width="62dp"
        android:layout_height="61dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="23dp"
        android:background="@mipmap/speaker"
        app:layout_constraintBottom_toTopOf="@+id/ws"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/reload"
        app:layout_constraintTop_toBottomOf="@+id/forward" />

    <Button
        android:id="@+id/reload"
        android:layout_width="62dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="23dp"
        android:background="@mipmap/reload"
        app:layout_constraintBottom_toTopOf="@+id/web"
        app:layout_constraintEnd_toStartOf="@+id/news"
        app:layout_constraintStart_toEndOf="@+id/profile"
        app:layout_constraintTop_toBottomOf="@+id/stop" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="63dp"
        android:layout_height="19dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="226dp"
        android:text="@string/menu"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/previous"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/fb"
        android:layout_width="42dp"
        android:layout_height="46dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="23dp"
        android:background="@mipmap/fb"
        android:onClick="FACEBOOK"
        app:layout_constraintEnd_toStartOf="@+id/web"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile" />

    <Button
        android:id="@+id/web"
        android:layout_width="42dp"
        android:layout_height="46dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="13dp"
        android:onClick="WEBSITE"
        android:background="@mipmap/web"
        app:layout_constraintEnd_toStartOf="@+id/ws"
        app:layout_constraintStart_toEndOf="@+id/fb"
        app:layout_constraintTop_toBottomOf="@+id/reload" />

    <Button
        android:id="@+id/ws"
        android:layout_width="52dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="102dp"
        android:background="@mipmap/ws"
        android:onClick="WHATSAPP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/web"
        app:layout_constraintTop_toBottomOf="@+id/news" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="339dp"
        android:layout_height="19dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="7dp"
        android:text="@string/copyright"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="83dp"
        android:text="@string/news"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/news" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="34dp"
        android:text="@string/reload"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/reload" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="1dp"
        android:text="@string/profile"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile" />

</androidx.constraintlayout.widget.ConstraintLayout>